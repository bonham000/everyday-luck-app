{
  "compilerOptions": {
    "jsx": "react-native",
    "module": "es2015",
    "target": "es2017",
    "outDir": "build",
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "expo": [
        "node_modules/@types/expo",
        "node_modules/expo"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ],
  "include": [
    "src/**/*",
    "tests/**/*",
    "vocabulary/**/*",
    "global.d.ts",
    "App.tsx",
    "StargazerApp.tsx"
  ],
  "types": [
    "typePatches"
  ],
  "extends": "expo/tsconfig.base"
}
